@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOVBOT</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="shortcut icon" href="img/movie-solid-24.png" type="image/x-icon" >
</head>
<body>
    <!--=============== PLAY MOVIE ===============-->
    <div class="movie-container">
        <!-- Play Img  -->
        <img src="img/movie-page/inters/1.jpg" class="play-img">
        <!-- Play Text -->
        <div class="play-text">
            <h2>Interstellar</h2>
            <div class="rating">
                <i class='bx bxs-star' ></i>
                <i class='bx bxs-star' ></i>
                <i class='bx bxs-star' ></i>
                <i class='bx bxs-star-half' ></i>
                <i class='bx bx-star' ></i>
            </div>
            <!-- tags -->
            <div class="tags">
                <span>Science Fiction</span>
                <span>Adventures</span>
            </div>

            <!-- imdb -->
            <a target="_blank" href="https://www.imdb.com/title/tt0816692/?pf_rd_m=A2FGELUUNOQJNL&pf_rd_p=1a264172-ae11-42e4-8ef7-7fed1973bb8f&pf_rd_r=7RMBD5PV14EK4T5K26J2&pf_rd_s=center-1&pf_rd_t=15506&pf_rd_i=top&ref_=chttp_tt_28">
                <div class="imdb">
                    <i class='bx bxl-imdb' ></i>
                    <p><span>8.6 </span>/ 10</p>
                </div>
                </a>

      
            <!-- <div class="trailer">
                <a href="#" class="btn">
                    <i class='bx bx-right-arrow'></i>
                    <span>Fragmanı İzle</span>
                </a>
                 </div>  -->

                 <!-- play btn -->
                 <i class='bx bx-right-arrow play-movie'></i>
                 <!-- video container -->
                 <div class="video-container">
                     <!-- video-box -->
                     <div class="video-box">
                        <iframe id="myvideo" controls src="https://www.youtube.com/embed/zSWdZVtXT7E" frameborder="0" allow="accelerometer; autoplay;" allowfullscreen></iframe>
                        <!-- close video -->
                        <i class='bx bx-x close-video'></i>
                    </div>
                 </div>
        </div>

    </div>

    <!--=============== MOVIE ABOUT ===============-->
    <div class="about-movie">
        <h2>Summary</h2>
        <p>Interstellar is about Earth’s last chance to find a habitable planet before a lack of resources causes the human race to go extinct. The film’s protagonist is Cooper (Matthew McConaughey), a former NASA pilot who is tasked with leading a mission through a wormhole to find a habitable planet in another galaxy.
        </p>
        <!-- movie cast -->
        <h2 class="cast-heading">Actors</h2>
        <div class="cast">
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000190/?ref_=tt_cl_t_1" target="blank"><img src="img/movie-page/inters/1-1.jpg" class="cast-img"></a>
                <span class="cast-title">Matthew McConaughey</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0004266/?ref_=tt_cl_t_2" target="blank"><img src="img/movie-page/inters/1-2.jpg" class="cast-img"></a>
                <span class="cast-title">Anne Hathaway</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm1567113/?ref_=tt_cl_t_3" target="blank"><img src="img/movie-page/inters/1-3.jpg" class="cast-img"></a>
                <span class="cast-title">Jessica Chastain</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm3237775/?ref_=tt_cl_t_4" target="blank"><img src="img/movie-page/inters/1-4.jpg" class="cast-img"></a>
                <span class="cast-title">Mackenzie Foy</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000995/?ref_=tt_cl_t_5" target="blank"><img src="img/movie-page/inters/1-5.jpg" class="cast-img"></a>
                <span class="cast-title">Ellen Burstyn</span>
            </div>

        </div>
    </div>
</body>
</html>