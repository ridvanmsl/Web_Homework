@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOVBOT</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="shortcut icon" href="img/movie-solid-24.png" type="image/x-icon" >
    
</head>
<body>
  
    <!--=============== PLAY MOVIE ===============-->
    <div class="movie-container">
        <!-- Play Img  -->
        <img src="img/movie-page/shazam/1.jpeg" class="play-img">
        <!-- Play Text -->
        <div class="play-text">
            <h2>Shazam! Fury of the Gods</h2>

            <!-- tags -->
            <div class="tags">
                <span>Adventure</span>
                <span>Action</span>
                <span>Comedy</span>
            </div>
            <div class="tags">         
                <span >21 December 2022</span>
            </div>

      
            <!-- <div class="trailer">
                <a href="#" class="btn">
                    <i class='bx bx-right-arrow'></i>
                    <span>Fragmanı İzle</span>
                </a>
                 </div>  -->

                 <!-- play btn -->
                 <i class='bx bx-right-arrow play-movie'></i>
                 <!-- video container -->
                 <div class="video-container">
                     <!-- video-box -->
                     <div class="video-box">
                        <iframe id="myvideo" controls src="https://www.youtube.com/embed/OymVteCQ2r8" frameborder="0" allow="accelerometer; autoplay;" allowfullscreen></iframe>
                        <!-- close video -->
                        <i class='bx bx-x close-video'></i>
                    </div>
                 </div>
        </div>

    </div>

    <!--=============== MOVIE ABOUT ===============-->
    <div class="about-movie">
        <h2>Summary</h2>
        <p>Sequel to the 2019 film 'Shazam!'. Plot details are not yet known.
        </p>
        <!-- movie cast -->
        <h2 class="cast-heading">Actors</h2>
        <div class="cast">
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm10399505/?ref_=tt_cl_t_1" target="blank"><img src="img/movie-page/shazam/1-1.jpg" class="cast-img"></a>
                <span class="cast-title">Rachel Zegler</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm1157048/?ref_=tt_cl_t_2" target="blank"><img src="img/movie-page/shazam/1-2.jpg" class="cast-img"></a>
                <span class="cast-title">Zachary Levi</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000545/?ref_=tt_cl_t_3" target="blank"><img src="img/movie-page/shazam/1-3.jpg" class="cast-img"></a>
                <span class="cast-title">Helen Mirren</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0005154/?ref_=tt_cl_t_4" target="blank"><img src="img/movie-page/shazam/1-4.jpg" class="cast-img"></a>
                <span class="cast-title">Lucy Liu</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0111013/?ref_=tt_cl_t_5" target="blank"><img src="img/movie-page/shazam/1-5.jpg" class="cast-img"></a>
                <span class="cast-title">Adam Brody</span>
            </div>

        </div>
    </div>
   
</body>
</html>