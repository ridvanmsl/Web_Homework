@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOVBOT</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="shortcut icon" href="img/movie-solid-24.png" type="image/x-icon" >

</head>
<body>
   
    <!--=============== PLAY MOVIE ===============-->
    <div class="movie-container">
        <!-- Play Img  -->
        <img src="img/movie-page/pf/1.jpeg" class="play-img">
        <!-- Play Text -->
        <div class="play-text">
            <h2>Pulp Fiction</h2>
            <div class="rating">
                <i class='bx bxs-star' ></i>
                <i class='bx bxs-star' ></i>
                <i class='bx bxs-star' ></i>
                <i class='bx bxs-star-half' ></i>
                <i class='bx bx-star' ></i>
            </div>
            <!-- tags -->
            <div class="tags">
                <span>Comedy</span>
                <span>Crime</span>
            </div>

            <!-- imdb -->
            <a target="_blank" href="https://www.imdb.com/title/tt0110912/">
                <div class="imdb">
                    <i class='bx bxl-imdb' ></i>
                    <p><span>8.9 </span>/ 10</p>
                </div>
                </a>

      
            <!-- <div class="trailer">
                <a href="#" class="btn">
                    <i class='bx bx-right-arrow'></i>
                    <span>Fragmanı İzle</span>
                </a>
                 </div>  -->

                 <!-- play btn -->
                 <i class='bx bx-right-arrow play-movie'></i>
                 <!-- video container -->
                 <div class="video-container">
                     <!-- video-box -->
                     <div class="video-box">
                        <iframe id="myvideo" controls src="https://www.youtube.com/embed/tGpTpVyI_OQ" frameborder="1" allow="accelerometer; autoplay;" allowfullscreen></iframe>
                        <!-- close video -->
                        <i class='bx bx-x close-video'></i>
                    </div>
                 </div>
        </div>

    </div>

    <!--=============== MOVIE ABOUT ===============-->
    <div class="about-movie">
        <h2>Summary</h2>
        <p>Hitmen Jules Winnfield and Vincent Vega arrive at an apartment to retrieve a briefcase for their boss, gangster Marsellus Wallace, from a business partner, Brett. After Vincent checks the contents of the briefcase, Jules shoots one of Brett's associates. He declaims a passage from the Bible, and he and Vincent kill Brett for trying to double-cross Marsellus. They take the briefcase to Marsellus and wait while he bribes boxer Butch Coolidge to take a dive in his upcoming match.
        </p>
        <!-- movie cast -->
        <h2 class="cast-heading">Actors</h2>
        <div class="cast">
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000237/?ref_=tt_cl_t_1" target="blank"><img src="img/movie-page/pf/1-1.jpg" class="cast-img"></a>
                <span class="cast-title">John Travolta</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000168/?ref_=tt_cl_t_3" target="blank"><img src="img/movie-page/pf/1-2.jpg" class="cast-img"></a>
                <span class="cast-title">Samuel L. Jackson</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000235/?ref_=tt_cl_t_2" target="blank"><img src="img/movie-page/pf/1-3.jpg" class="cast-img"></a>
                <span class="cast-title">Umma Thurman</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000246/?ref_=tt_cl_t_4" target="blank"><img src="img/movie-page/pf/1-4.jpg" class="cast-img"></a>
                <span class="cast-title">Bruce Willis</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000275/?ref_=tt_cl_t_14" target="blank"><img src="img/movie-page/pf/1-5.jpg" class="cast-img"></a>
                <span class="cast-title">Rosanna Aquette</span>
            </div>

        </div>
    </div>
  
</body>
</html>