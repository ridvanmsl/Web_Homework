@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOVBOT</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="shortcut icon" href="img/movie-solid-24.png" type="image/x-icon" >

</head>
<body>
    <!--=============== PLAY MOVIE ===============-->
    <div class="movie-container">
        <!-- Play Img  -->
        <img src="img/movie-page/john/1.jpg" class="play-img">
        <!-- Play Text -->
        <div class="play-text">
            <h2>John Wick: Chapter 4</h2>

            <!-- tags -->
            <div class="tags">
                <span>Action</span>
                <span>Crime</span>
                <span>Thriller</span>
                
            </div>
            <div class="tags">         
                <span >Expected March 24, 2023</span>
            </div>

      
            <!-- <div class="trailer">
                <a href="#" class="btn">
                    <i class='bx bx-right-arrow'></i>
                    <span>Fragmanı İzle</span>
                </a>
                 </div>  -->

                 <!-- play btn -->
                 <i class='bx bx-right-arrow play-movie'></i>
                 <!-- video container -->
                 <div class="video-container">
                     <!-- video-box -->
                     <div class="video-box">
                        <iframe id="myvideo" controls src="https://www.youtube.com/embed/56pvThSsoSE" frameborder="0" allow="accelerometer; autoplay;" allowfullscreen></iframe>
                        <!-- close video -->
                        <i class='bx bx-x close-video'></i>
                    </div>
                 </div>
        </div>

    </div>

    <!--=============== MOVIE ABOUT ===============-->
    <div class="about-movie">
        <h2>Summary</h2>
        <p>An exploration of the adventures, harrowing experiences, and exploits of legendary hit man John Wick.
        </p>
        <!-- movie cast -->
        <h2 class="cast-heading">Actors</h2>
        <div class="cast">
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000206/?ref_=tt_cl_i_1" target="blank"><img src="img/movie-page/john/1-1.jpg" class="cast-img"></a>
                <span class="cast-title">Keanu Reeves</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0947447/?ref_=tt_cl_i_2" target="blank"><img src="img/movie-page/john/1-2.jpg" class="cast-img"></a>
                <span class="cast-title">Donnie Yen</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0803889/?ref_=tt_cl_i_3" target="blank"><img src="img/movie-page/john/1-3.jpg" class="cast-img"></a>
                <span class="cast-title">Bill Skarsgård</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000401/?ref_=tt_cl_i_4" target="blank"><img src="img/movie-page/john/1-4.jpg" class="cast-img"></a>
                <span class="cast-title">Laurence Fishburne</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0760796/?ref_=tt_cl_i_5" target="blank"><img src="img/movie-page/john/1-5.jpg" class="cast-img"></a>
                <span class="cast-title">Hiroyuki Sanada</span>
            </div>

        </div>
    </div>
</body>
</html>