@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOVBOT</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="shortcut icon" href="img/movie-solid-24.png" type="image/x-icon" >
</head>
<body>
    <!--=============== PLAY MOVIE ===============-->
    <div class="movie-container">
        <!-- Play Img  -->
        <img src="img/movie-page/fast-x/1.jpeg" class="play-img">
        <!-- Play Text -->
        <div class="play-text">
            <h2>Fast X</h2>

            <!-- tags -->
            <div class="tags">
                <span>Action</span>
                <span>Crime</span>
                <span>Mystery</span>
            </div>
            <div class="tags">         
                <span >19 May 2023</span>
            </div>

      
            <!-- <div class="trailer">
                <a href="#" class="btn">
                    <i class='bx bx-right-arrow'></i>
                    <span>Fragmanı İzle</span>
                </a>
                 </div>  -->

                 <!-- play btn -->
                 <i class='bx bx-right-arrow play-movie'></i>
                 <!-- video container -->
                 <div class="video-container">
                     <!-- video-box -->
                     <div class="video-box">
                        <iframe id="myvideo" controls src="https://www.youtube.com/embed/ns7JNW-lJv0" frameborder="0" allow="accelerometer; autoplay;" allowfullscreen></iframe>
                        <!-- close video -->
                        <i class='bx bx-x close-video'></i>
                    </div>
                 </div>
        </div>

    </div>

    <!--=============== MOVIE ABOUT ===============-->
    <div class="about-movie">
        <h2>Summary</h2>
        <p>Plot unknown.
        </p>
        <!-- movie cast -->
        <h2 class="cast-heading">Actors</h2>
        <div class="cast">
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0597388/?ref_=tt_cl_t_2" target="blank"><img src="img/movie-page/fast-x/1-1.jpg" class="cast-img"></a>
                <span class="cast-title">Jason Momoa</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000234/?ref_=tt_cl_t_1" target="blank"><img src="img/movie-page/fast-x/1-2.jpg" class="cast-img"></a>
                <span class="cast-title">Charlize Theron</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0004874/?ref_=tt_cl_t_4" target="blank"><img src="img/movie-page/fast-x/1-3.jpg" class="cast-img"></a>
                <span class="cast-title">Vin Diesel </span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0488953/?ref_=tt_cl_t_3" target="blank"><img src="img/movie-page/fast-x/1-4.jpg" class="cast-img"></a>
                <span class="cast-title">Brie Larson</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0735442/?ref_=tt_cl_t_5" target="blank"><img src="img/movie-page/fast-x/1-5.jpg" class="cast-img"></a>
                <span class="cast-title">Michelle Rodriguez</span>
            </div>

        </div>
    </div>
</body>
</html>