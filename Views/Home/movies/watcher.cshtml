@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOVBOT</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="shortcut icon" href="img/movie-solid-24.png" type="image/x-icon" >
    
</head>
<body>
   
    <!--=============== PLAY MOVIE ===============-->
    <div class="movie-container">
        <!-- Play Img  -->
        <img src="img/movie-page/watcher/1.jpg" class="play-img">
        <!-- Play Text -->
        <div class="play-text">
            <h2>Watcher</h2>

            <!-- tags -->
            <div class="tags">
                <span>Drama</span>
                <span>Horror</span>
                <span>Thriller</span>
                
            </div>
            <div class="tags">         
                <span >Releases June 3, 2022</span>
            </div>

      
            <!-- <div class="trailer">
                <a href="#" class="btn">
                    <i class='bx bx-right-arrow'></i>
                    <span>Fragmanı İzle</span>
                </a>
                 </div>  -->

                 <!-- play btn -->
                 <i class='bx bx-right-arrow play-movie'></i>
                 <!-- video container -->
                 <div class="video-container">
                     <!-- video-box -->
                     <div class="video-box">
                        <iframe id="myvideo" controls src="https://www.youtube.com/embed/KDc6ZLo8sjc" frameborder="0" allow="accelerometer; autoplay;" allowfullscreen></iframe>
                        <!-- close video -->
                        <i class='bx bx-x close-video'></i>
                    </div>
                 </div>
        </div>

    </div>

    <!--=============== MOVIE ABOUT ===============-->
    <div class="about-movie">
        <h2>Summary</h2>
        <p>As a serial killer stalks the city, Julia – a young actress who just moved to town with her boyfriend – notices a mysterious stranger watching her from across the street in this terrifying thriller.
        </p>
        <!-- movie cast -->
        <h2 class="cast-heading">Actors</h2>
        <div class="cast">
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm2140860?ref_=tt_cl_i_1" target="blank"><img src="img/movie-page/watcher/1-1.jpg" class="cast-img"></a>
                <span class="cast-title">Maika Monroe</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm3194762/?ref_=tt_cl_i_2" target="blank"><img src="img/movie-page/watcher/1-2.jpg" class="cast-img"></a>
                <span class="cast-title">Karl Glusman</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm1218607/?ref_=tt_cl_i_3" target="blank"><img src="img/movie-page/watcher/1-3.jpg" class="cast-img"></a>
                <span class="cast-title">Burn Gorman</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0678431/?ref_=tt_cl_i_4" target="blank"><img src="img/movie-page/watcher/1-4.jpg" class="cast-img"></a>
                <span class="cast-title">Tudor Petrut</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm4356591/?ref_=tt_cl_i_6" target="blank"><img src="img/movie-page/watcher/1-5.jpg" class="cast-img"></a>
                <span class="cast-title">Madalina Anea</span>
            </div>

        </div>
    </div>
   
</body>
</html>