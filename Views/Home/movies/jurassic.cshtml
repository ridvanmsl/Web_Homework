@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MOVBOT</title>
    <link rel="stylesheet" href="site.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css">
    <link rel="shortcut icon" href="img/movie-solid-24.png" type="image/x-icon" >
</head>
<body>
    <!--=============== PLAY MOVIE ===============-->
    <div class="movie-container">
        <!-- Play Img  -->
        <img src="img/movie-page/jurassic/1.jpg" class="play-img">
        <!-- Play Text -->
        <div class="play-text">
            <h2>Jurassic World Dominionr</h2>

            <!-- tags -->
            <div class="tags">
                <span>Action</span>
                <span>Acventure</span>
                <span>Sci-Fi</span>
                
            </div>
            <div class="tags">         
                <span >Releases June 10, 2022</span>
            </div>

      
            <!-- <div class="trailer">
                <a href="#" class="btn">
                    <i class='bx bx-right-arrow'></i>
                    <span>Fragmanı İzle</span>
                </a>
                 </div>  -->

                 <!-- play btn -->
                 <i class='bx bx-right-arrow play-movie'></i>
                 <!-- video container -->
                 <div class="video-container">
                     <!-- video-box -->
                     <div class="video-box">
                        <iframe id="myvideo" controls src="https://www.youtube.com/embed/DtQycgMD4HQ" frameborder="0" allow="accelerometer; autoplay;" allowfullscreen></iframe>
                        <!-- close video -->
                        <i class='bx bx-x close-video'></i>
                    </div>
                 </div>
        </div>

    </div>

    <!--=============== MOVIE ABOUT ===============-->
    <div class="about-movie">
        <h2>Summary</h2>
        <p>The future of mankind hangs in the balance as humans and dinosaurs coexist following the destruction of Isla Nublar.
        </p>
        <!-- movie cast -->
        <h2 class="cast-heading">Actors</h2>
        <div class="cast">
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0695435/?ref_=tt_cl_i_1" target="blank"><img src="img/movie-page/jurassic/1-1.jpg" class="cast-img"></a>
                <span class="cast-title">Chris Pratt</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0397171/?ref_=tt_cl_i_2" target="blank"><img src="img/movie-page/jurassic/1-2.jpg" class="cast-img"></a>
                <span class="cast-title">Bryce Dallas Howard</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000554/?ref_=tt_cl_i_3" target="blank"><img src="img/movie-page/jurassic/1-3.jpg" class="cast-img"></a>
                <span class="cast-title">Sam Neill</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000368/?ref_=tt_cl_i_4" target="blank"><img src="img/movie-page/jurassic/1-4.jpg" class="cast-img"></a>
                <span class="cast-title">Laura Dern</span>
            </div>
            <div class="cast-box">
                <a href="https://www.imdb.com/name/nm0000156/?ref_=tt_cl_i_5" target="blank"><img src="img/movie-page/jurassic/1-5.jpg" class="cast-img"></a>
                <span class="cast-title">Jeff Goldblum</span>
            </div>

        </div>
    </div>
</body>
</html>